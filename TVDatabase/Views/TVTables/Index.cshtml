@model IEnumerable<TVDatabase.Models.TVTable>

@{
    ViewBag.Title = "Browse";
}
<div id="topper">
    <span id="browseTitle">
        Browse All Shows
    </span>
    <span class="topButton">
        @Html.ActionLink("Add New Show", "Create", null, new { @class = "btn btn-success", @style = "top: -10px; text-align:center; position:relative" })
    </span>
</div>
@using (Html.BeginForm())
{
    <p>
        Genre: @Html.DropDownList("movieGenre", "All")
        Title: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
}
<div class="row owl-carousel owl-theme">
    @foreach (var item in Model)
    {
        <div>
            <a href="@Url.Action("Details", "TVTables", new { id = item.ID })" title="@item.ShowName - Show Details">
                <figure>
                    @*<img alt="Details" src="@Url.Content(item.Image)">*@
                    @if (!string.IsNullOrEmpty(item.Image)) {
                        <img alt="Details" src="@Url.Content(item.Image)">
                    }
                    else
                    {
                        <img alt="Details" src="~/Images/tv.png">
                    }
                    <figcaption>
                        <h1>@item.ShowName</h1>
                        @*<p>Seasons: @item.NumberOfSeasons</p>*@
                        <p>Genre: @item.Genre</p>
                    </figcaption>
                </figure>
            </a>
        </div>
    }
</div>
