            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
        </span>
        <span class="col-xs-3">
            @Html.ActionLink("Edit Show", "Edit", new { id = Model.ID }, new { @class = "btn btn-success" })
        </span>
        <span class="col-xs-3">
